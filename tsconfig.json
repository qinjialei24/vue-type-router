{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strictNullChecks": true,
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*"
  ],
  "exclude": [
    "dist"
  ]
}